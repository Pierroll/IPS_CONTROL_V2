<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Factura {{invoiceNumber}}</title>
    <style>
      body { font-family: Arial, sans-serif; font-size: 12px; color: #222; }
      .header { display:flex; justify-content:space-between; align-items:center; }
      .logo { height: 48px; }
      .title { font-size: 20px; font-weight: bold; }
      table { width:100%; border-collapse: collapse; margin-top:16px; }
      th, td { padding:8px; border-bottom: 1px solid #eee; text-align:left; }
      .total { text-align:right; font-weight:bold; }
    </style>
  </head>
  <body>
    <div class="header">
      <img class="logo" src="{{company.logoPath}}" alt="logo">
      <div class="title">Factura {{invoiceNumber}}</div>
    </div>

    <p><strong>{{company.name}}</strong><br>
       RUC: {{company.ruc}}<br>
       {{company.address}}</p>

    <p><strong>Cliente:</strong> {{customer.name}}<br>
       {{customer.documentNumber}}</p>

    <p><strong>Periodo:</strong> {{periodStart}} – {{periodEnd}}<br>
       <strong>Emisión:</strong> {{issueDate}} | <strong>Vencimiento:</strong> {{dueDate}}</p>

    <table>
      <thead>
        <tr>
          <th>Descripción</th>
          <th style="width:80px;">Cant.</th>
          <th style="width:120px;">P. Unit.</th>
          <th style="width:120px;">Total</th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
        <tr>
          <td>{{this.description}}</td>
          <td>{{this.quantity}}</td>
          <td>{{this.unitPrice}}</td>
          <td>{{this.total}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <p class="total">Subtotal: {{subtotal}}<br>
      IGV: {{tax}}<br>
      Descuento: {{discount}}<br>
      <span style="font-size: 16px;">Total: {{total}}</span></p>

    <p>Estado: {{status}}</p>
  </body>
</html>
